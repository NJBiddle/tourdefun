<div class="col-md-1 col-sm-2 col-xs-3">
  <div class="bronze-sponsor">
    <% if bronze_sponsor.website.blank? %>
      <%= image_tag bronze_sponsor.logo_url(:medium),
            class: 'img-responsive center-block' %>

    <% else %>
      <%= link_to bronze_sponsor.website do %>
        <%= image_tag bronze_sponsor.logo_url(:medium),
            class: 'img-responsive center-block' %>
      <% end %>
    <% end %>
  </div>
</div>
