<div class="container">
  <nav class="centered-tabs">
    <a href="#shows" class="active">Shows</a>
    <a href="#map">Map</a>
  </nav>

    <div class="row">
      <div class="col-sm-4 col-sm-offset-4 col-xs-6 col-xs-offset-3">
        <br><a href="http://www.eventbrite.com/e/tour-de-fun-2015-tickets-16267717180?ref=ebtn" target="_blank" class="btn btn-success btn-sm btn-block">Order tickets here!
        </a>
      </div>
    </div>

  <div class="tab-content">
    <div class="tab-pane active row" id="shows">
      <div class="col-sm-10 col-sm-offset-1">

        <% @timeslots.group_by(&:start).each do |start, timeslots| %>
          <div class="timesection <%= timeslot_past(start) %>">
            <h2 id="<%= start.strftime('%l:%M%P').strip %>">
              <strong><%= start.strftime('%l:%M%P') %></strong>
            </h2>

            <%= render timeslots %>
          </div>
        <% end %>


        <% if @timeslots.blank? %>
          <h4 class="text-muted">
            Coming soon!
          </h4>
        <% end %>
      </div>
    </div>

    <div class="tab-pane row" id="map">
      <div class="col-sm-12">
        <div id="map-canvas"></div>
      </div>
    </div>
  </div>
</div>
