<%= div_for timeslot, class: "row", data: { location: "#{coords(timeslot)}" } do %>
  <header class="col-sm-12">
    <h3>
      <%= link_to_map "<i class='fa fa-map-marker fa-fw'></i>".html_safe, timeslot.venue %>
      <%= timeslot.venue.name %>
    </h3>
  </header>

  <div class="col-sm-8">
    <% if timeslot.artists.any? %>
      <div class="text-muted timeslot-description">
        <%= simple_format timeslot.description %>
      </div>

      <%=raw timeslot.artists.map { |a|
            link_to_unless a.website.blank?,
              a.name, a.website
          }.to_sentence %>
    <% else %>
      <p class="text-muted">
        No artists scheduled for this time
      </p>
    <% end %>
  </div>

<% end %>
