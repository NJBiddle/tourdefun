<div class="container">
  <div class="row sponsors-logos">
      <% platinum_sponsors.each do |sponsor| %>
    <div class="col-sm-4 text-center">
        <%= link_to_unless sponsor.website.blank?,
              image_tag(sponsor.logo.url(:medium),
                        alt: sponsor.name,
                        class: 'img-responsive')
          %>
    </div>
      <% end %>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <p>
        &copy; <%= Date.today.year %> Tour de Fun
      </p>
    </div>
  </div>
</div>
